---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";

const today = new Date();

---

<!doctype html>
<html lang="en">

  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="min-h-screen font-sans m-0 p-0 text-left bg-gradient-to-t from-slate-200 to-white text-lg lg:text-xl break-words text-slate-800">

    <Nav />

    <div class="min-h-max w-underfull max-w-screen-lg mx-auto mt-10">


      <slot />
    
    

    <footer class="bg-white rounded-lg shadow mt-20">

      <div class="w-full mx-auto p-4 md:flex md:items-center md:justify-between">
        <span class="text-sm text-gray-500 sm:text-center">
          &copy; {today.getFullYear()} Your name here. All rights reserved.
      </span>

      <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500  sm:mt-0">
          <li>
              <a href="#" class="hover:underline me-4 md:me-6">About</a>
          </li>
          <li>
              <a href="#" class="hover:underline me-4 md:me-6">Privacy Policy</a>
          </li>
          <li>
              <a href="#" class="hover:underline me-4 md:me-6">Licensing</a>
          </li>
          <li>
              <a href="#" class="hover:underline">Contact</a>
          </li>
      </ul>
      </div>
    </footer>


    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.js"></script>

  </body>
</html>
