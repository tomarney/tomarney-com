---
interface Props {
	date: Date;
	day?: Boolean;
}

const { date, day=true } = Astro.props;

const options: Intl.DateTimeFormatOptions = {
		year: 'numeric',
		month: 'short',
	}

if (day) {
	options.day = 'numeric'
}
---

<time datetime={date.toISOString()}>{
	date.toLocaleDateString('en-gb', options)
}</time>
